				+gallery('assets/img/Gallery6/image2.jpg', 'assets/img/Gallery6/image2.jpg')
				+gallery('assets/img/Gallery6/image3.jpg', 'assets/img/Gallery6/image3.jpg')
				+gallery('assets/img/Gallery6/image4.jpg', 'assets/img/Gallery6/image4.jpg')
				+gallery('assets/img/Gallery6/image5.jpg', 'assets/img/Gallery6/image5.jpg')
				+gallery('assets/img/Gallery6/image6.jpg', 'assets/img/Gallery6/image6.jpg')
